<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_order_line_form_custom" model="ir.ui.view">
    <field name="name">sale.order.line.form.inherit</field>
    <field name="model">sale.order.line</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='order_line']/form//sheet" position="inside">
        <group string="Curtain Details">
          <field name="x_code"/>
          <field name="x_type"/>
          <field name="x_width_m"/>
          <field name="x_height_m"/>
          <field name="x_unit_area_m2"/>
          <field name="x_quantity_units"/>
          <field name="x_total_area_m2"/>
          <field name="x_price_per_m2"/>
          <field name="x_total_price"/>
        </group>
      </xpath>
    </field>
  </record>
</odoo>