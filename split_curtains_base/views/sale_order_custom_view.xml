<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_order_form_split_cur_custom" model="ir.ui.view">
    <field name="name">sale.order.form.split.cur.custom</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">
      <!-- إضافة حقلَي "العربون" و"المتبقي" في الهيدر،
           وإخفاؤهما عند مساواة x_remaining للصفر -->
      <xpath expr="//sheet//group" position="inside">
        <group>
          <field name="x_downpayment" invisible="x_remaining == 0"/>
          <field name="x_remaining" invisible="x_remaining == 0"/>
        </group>
      </xpath>
    </field>
  </record>
</odoo>
