<odoo>
  <record id="inherit_order_line_tree" model="ir.ui.view">
    <field name="name">sale.order.line.tree.inherit.hide.downpayment</field>
    <field name="model">sale.order.line</field>
    <field name="inherit_id" ref="sale.view_order_line_tree"/>
    <field name="arch" type="xml">
      <xpath expr="//tree" position="attributes">
        <attribute name="domain">[('product_id.name', 'not ilike', 'down payment')]</attribute>
      </xpath>
    </field>
  </record>
</odoo>
