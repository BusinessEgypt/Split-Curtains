<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_order_form_curtains_custom" model="ir.ui.view">
    <field name="name">sale.order.form.curtains.custom</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='order_line']" position="attributes">
        <attribute name="form_view_ref">
          split_curtains_base.view_order_line_form_curtains_custom
        </attribute>
        <attribute name="tree_view_ref">
          split_curtains_base.view_order_line_tree_custom_curtains
        </attribute>
      </xpath>
      <!-- إحنا مش بنضيف Totals هنا تاني -->
    </field>
  </record>
</odoo>
