<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_sale_order_line_tree_custom" model="ir.ui.view">
    <field name="name">sale.order.line.tree.custom</field>
    <field name="model">sale.order.line</field>
    <field name="inherit_id" ref="sale.view_order_tree"/>
    <field name="arch" type="xml">
      <tree string="Order Lines" domain="[('product_id.name', 'not ilike', 'down payment')]">
        <field name="product_id"/>
        <field name="name"/>
        <field name="product_uom_qty"/>
        <field name="price_unit"/>
        <field name="price_subtotal"/>
        <!-- زوّد أو اشيل أعمدة حسب اللي ظاهر عندك -->
      </tree>
    </field>
  </record>
</odoo>
